<h1 class="page-header"> Sign up for Dating! </h1>

<%= form_for(@user, :url => signup_path) do |f| %>
	<%= f.label(:name)%>
	<%= f.text_field(:name)%>

	<%= f.label(:gender)%>
	<%= f.select(:gender, options_for_select([male, female]))%>

	<%= f.label(:age)%>
	<%= f.select(:age options_for_select([18...100]))%>

	<%= f.label(:username) %>
	<%= f.text_field(:username)%>

	<%= f.label(:password)%>
	<%= f.password(:password)%>

	<%= f.label(:password_confirmation)%>
	<%= f.password(:password_confirmation)%>

	<%= f.submit('Sign up')%>
<% end %>